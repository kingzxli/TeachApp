<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.song.mapper.ShufflingMapper">

	<select id="selectByType" resultType="com.song.pojo.Shuffling" >
		select * from shuffling where type = #{type}
	</select>
	
	<select id="selectByid" resultType="com.song.pojo.Shuffling">
		select * from shuffling where id=#{id}
	</select>
	
	<insert id="add" parameterType="com.song.pojo.Shuffling">
		insert into shuffling(image,jump,type,content) values (#{image},#{jump},#{type},#{content})
	</insert>
	
	<delete id="delete" >
		delete from shuffling where id=#{id}
	</delete>
	
	
	<update id="update" parameterType="com.song.pojo.Shuffling">
		update shuffling set
		<trim suffixOverrides=",">
			<if test="image != null and image != ''">
				image = #{image},
			</if>
			<if test="jump != null and jump != ''">
				jump = #{jump},
			</if>
			<if test="type != null and type != ''">
				type = #{type},
			</if>
			<if test="content != null and content != ''">
				content = #{content},
			</if>
		</trim>
		where id =#{id}
	</update>
	
	<select id="selectAll" resultType="com.song.pojo.Shuffling">
		select * from shuffling
	</select>
	

</mapper>
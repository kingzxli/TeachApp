<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.song.mapper.RewardMapper">

	<insert id="add" parameterType="com.song.pojo.Reward">
		insert into reward(openid,shareId,status,money,ordernum) values (#{openid},#{shareId},#{status},#{money},#{ordernum})
	</insert>
	
	<update id="update" parameterType="com.song.pojo.Reward">
		update reward set money=#{money},ordernum=#{ordernum} where shareId=#{shareid}
	</update>
	
	<select id="selectByOrdernum" resultType="com.song.pojo.Reward">
		select * from reward where ordernum = #{ordernum}
	</select>
	
	
</mapper>
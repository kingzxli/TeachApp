<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.song.mapper.CollectMapper">

	<insert id="insert" parameterType="Collect">
		insert into collection (tid,pid,type)
		 values (#{tid},#{pid},#{type})
	</insert>

	<select id="select" parameterType="Integer" resultType="Collect">
		select * from collection where pid=#{pid} and tid=#{tid}
	</select>
	
	<delete id="delete" parameterType="Integer">
		delete from collection where pid=#{pid} and tid=#{tid}
	</delete>
	
	<resultMap type="Collect" id="collectMap">
		<id column="id" property="id"/>
		<collection property="teacher" ofType="Teacher">
			<id column="tid" property="id"/>
			<result column="name" property="name"/>
			<result column="image" property="image"/>
			<result column="project" property="project"/>
			<result column="level" property="level"/>
			<result column="seniority" property="seniority"/>
			<result column="number" property="number"/>
			<result column="price" property="price"/>
			<result column="character" property="character"/>
		</collection>
	</resultMap>
	<select id="selectByPid" parameterType="int" resultMap="collectMap">
		select c.*,t.* from collection c,teacher t where c.tid = t.id and pid=#{pid} and c.type="teacher"
	</select>
	
</mapper>
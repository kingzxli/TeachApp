<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.song.mapper.LessonMapper">

	<insert id="insert" parameterType="Lesson">
		insert into lesson (times,tid,state) values (#{times},#{tid},#{state})
	</insert>
	
	<select id="selectById" parameterType="int" resultType="Lesson">
		select * from lesson where tid=#{tid}
	</select>
	
	<update id="update" parameterType="Lesson">
		update lesson set
			<trim suffixOverrides=",">
				<if test="times != null">
					times=#{times},
				</if>
				<if test="state != null">
					state=#{state},
				</if>
			</trim>
		where tid=#{tid}
	</update>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.song.mapper.ParentMapper">

	<select id="selectMoney" parameterType="String" resultType="Double">
		select money from parent where openid=#{openid}
	</select>

	<select id="selectByOpenid" parameterType="String" resultType="Parent">
		select * from parent where openid=#{openid}
	</select>
	
	<select id="selectByid" parameterType="int" resultType="Parent">
		select * from parent where id=#{tid}
	</select>
	
	<delete id="delete" parameterType="int">
		delete from parent where id=#{id}
	</delete>
	
	<insert id="add" parameterType="Parent" useGeneratedKeys="true" keyProperty="id">
		insert into parent 
			<trim prefix="(" suffix=")" suffixOverrides=",">
			  <if test="latlng != null">
			  	latlng,
			  </if>
		      <if test="sex != null">
		        sex,
		      </if>
		      <if test="image != null">
		        image,
		      </if>
		      <if test="location != null">
		        location,
		      </if>
		      <if test="name != null">
		        name,
		      </if>
		      <if test="phone != null">
		        phone,
		      </if>
		      <if test="openid != null">
		        openid,
		      </if>
	    </trim>
	    <trim prefix="values (" suffix=")" suffixOverrides=",">
		      <if test="latlng != null">
				#{latlng},
			  </if>
		      <if test="sex != null">
		        #{sex},
		      </if>
		      <if test="image != null">
		        #{image},
		      </if>
		      <if test="location != null">
		        #{location},
		      </if>
		      <if test="name != null">
		        #{name},
		      </if>
		      <if test="phone != null">
		        #{phone},
		      </if>
		      <if test="openid != null">
		        #{openid},
		      </if>
	    </trim>
	</insert>
	
	<select id="selectByName" parameterType="String" resultType="String">
		select openid from parent where name =#{name}
	</select>
	
	<update id="updateIdentity" parameterType="Parent">
		update parent set online=#{online} where openid=#{openid}
	</update>
	
	<select id="selectByOnId" parameterType="Parent" resultType="Parent">
		select * from parent where online=#{online} and id=#{id}
	</select>
	
	<update id="updateMoney" parameterType="Parent">
		update parent set money=#{money} where id=#{id}
	</update>
	
	<select id="Login" parameterType="String" resultType="Parent">
		select * from parent where phone=#{username} and openid=#{password}
	</select>
	
</mapper>
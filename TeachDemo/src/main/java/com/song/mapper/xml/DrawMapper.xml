<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.song.mapper.DrawMapper">

	<insert id="add" parameterType="Draw">
		insert into draw(openid,addtime,money,zhifubao) values (#{openid},#{addtime},#{money},#{zhifubao})
	</insert>
	
	<select id="selectByOpenid" parameterType="String" resultType="Draw">
		select * from draw where openid=#{openid}
	</select>
	
	<select id="selectAll" resultType="Draw">
		select * from draw where status = 1
	</select>
	
	
</mapper>
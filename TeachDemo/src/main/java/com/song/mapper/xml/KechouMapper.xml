<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.song.mapper.KechouMapper">

	<select id="selectById" parameterType="int" resultType="Kechou">
		select * from kechou where tid=#{tid}
	</select>
	
	<insert id="add" parameterType="Kechou">
		insert into kechou (addtime,tid,title,money) values (#{addtime},#{tid},#{title},#{money})
	</insert>
	
	<update id="update" parameterType="Kechou">
		update kechou set 
		<trim suffixOverrides=",">
			<if test="title != null and title !=''">
				title = #{title},
			</if>
			<if test="money != null and money !=''">
				money = #{money},
			</if>
		</trim>
		where id = #{id}
	</update>
	
	<delete id="delete" parameterType="int">
		delete from kechou where id= #{id}
	</delete>
	
</mapper>